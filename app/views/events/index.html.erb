<% @events.each do |e| %>
  <section class="event">
    <div class="summary">
      <h2><%= e.name %></h2>
      <h3><%= day_and_time(e) %> in <%= e.location %></h3>
      <span class="price">
        <%= price(e) %>
      </span>
      <p>
        <%= truncate(e.description, length: 35, separator: ' ') %>
      </p>
    </div>
  </section>
<% end %>